# Database Configuration
# PostgreSQL connection string with connection pooling
DATABASE_URL="postgresql://postgres:password@localhost:5432/geminivideo?schema=public&connection_limit=10&pool_timeout=20"

# For production, use connection pooling:
# DATABASE_URL="postgresql://user:password@host:port/db?schema=public&connection_limit=20&pool_timeout=30&connect_timeout=10"

# Application Configuration
NODE_ENV=development
PORT=3000

# Google Cloud Storage
GCS_BUCKET=geminivideo-dev
GCS_PROJECT_ID=geminivideo-project
# CRITICAL: GCS_MOCK_MODE should ONLY be 'true' in local development
# In production, this MUST be 'false' or undefined
# GCS_MOCK_MODE=false

# Redis Configuration (for caching, sessions, rate limiting, pub/sub)
REDIS_URL=redis://localhost:6379
# For Redis with password: redis://:password@localhost:6379
# For Redis with SSL/TLS: rediss://username:password@hostname:6380
# Redis Cluster (optional - comma-separated nodes):
# REDIS_CLUSTER_NODES=redis1:6379,redis2:6379,redis3:6379
REDIS_ENABLED=true

# API Keys
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Meta Ads Configuration
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_ACCESS_TOKEN=your-meta-access-token

# ML Service Configuration
ML_SERVICE_URL=http://localhost:8000

# Logging
LOG_LEVEL=info

# Budget Scheduler Notifications
# Slack webhook URL for budget optimization alerts (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# SendGrid API key for email notifications (optional)
# SENDGRID_API_KEY=SG.your-sendgrid-api-key
# Email address to receive budget alerts (optional)
# BUDGET_ALERT_EMAIL=alerts@yourcompany.com
# From email address for budget alerts (optional, defaults to noreply@geminivideo.ai)
# BUDGET_ALERT_FROM_EMAIL=budget@yourcompany.com
# Generic webhook URL for budget optimization events (optional)
# BUDGET_WEBHOOK_URL=https://your-webhook-endpoint.com/budget

# Budget Scheduler Configuration
# Cron schedule for budget optimization (default: every 12 hours)
# BUDGET_SCHEDULE=0 */12 * * *
# Default ad account ID for scheduled budget optimization
# DEFAULT_AD_ACCOUNT_ID=your-default-account-id
