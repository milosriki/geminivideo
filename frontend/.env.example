# Firebase Configuration (Required)
# Get these from Firebase Console: https://console.firebase.google.com/
# SECURITY: Never commit actual values - this is just a template
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# API Gateway URL (Required)
VITE_API_URL=http://localhost:8000

# Environment (Required)
VITE_ENV=development

# Feature Flags (Optional)
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PERFORMANCE=true

# Meta Pixel (Optional)
# Get your Pixel ID from Meta Events Manager: https://business.facebook.com/events_manager
VITE_META_PIXEL_ID=your_pixel_id_here
