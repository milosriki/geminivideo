# ============================================================================
# GeminiVideo Monitoring Configuration
# ============================================================================

# Service Configuration
SERVICE_VERSION=1.0.0
ENVIRONMENT=production

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/geminivideo.log
LOG_RETENTION_DAYS=30

# Prometheus Configuration
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus
PROMETHEUS_RETENTION_DAYS=30

# ============================================================================
# Email Alerts Configuration
# ============================================================================

# SMTP Server Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@geminivideo.com
SMTP_PASSWORD=your-smtp-password
SMTP_USE_TLS=true

# Alert Email Addresses
ALERT_EMAIL_FROM=alerts@geminivideo.com
ALERT_EMAIL_TO=team@geminivideo.com,oncall@geminivideo.com

# ============================================================================
# Slack Alerts Configuration
# ============================================================================

# Slack Webhook URL (get from Slack App settings)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Slack Channel (optional, can specify in webhook)
SLACK_CHANNEL=#alerts

# ============================================================================
# PagerDuty Configuration
# ============================================================================

# PagerDuty Integration Key (Events API v2)
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key

# ============================================================================
# Grafana Configuration
# ============================================================================

# Grafana Admin Credentials
GRAFANA_ADMIN_PASSWORD=secure-admin-password

# Grafana Root URL
GRAFANA_ROOT_URL=http://localhost:3000

# ============================================================================
# Database Configuration (for exporters)
# ============================================================================

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=geminivideo

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# ============================================================================
# Alert Thresholds (optional overrides)
# ============================================================================

# HTTP Error Rate Threshold (percentage)
ALERT_HTTP_ERROR_RATE_WARNING=0.01
ALERT_HTTP_ERROR_RATE_ERROR=0.05
ALERT_HTTP_ERROR_RATE_CRITICAL=0.10

# HTTP Latency Threshold (seconds)
ALERT_HTTP_P95_LATENCY_WARNING=1.0
ALERT_HTTP_P95_LATENCY_ERROR=3.0
ALERT_HTTP_P95_LATENCY_CRITICAL=5.0

# AI API Cost Threshold (USD per hour)
ALERT_AI_COST_WARNING=100.0
ALERT_AI_COST_ERROR=500.0
ALERT_AI_COST_CRITICAL=1000.0

# Queue Depth Threshold
ALERT_QUEUE_DEPTH_WARNING=1000
ALERT_QUEUE_DEPTH_ERROR=5000
ALERT_QUEUE_DEPTH_CRITICAL=10000

# ============================================================================
# Service Discovery (optional)
# ============================================================================

# Consul
CONSUL_HOST=consul
CONSUL_PORT=8500

# Kubernetes
K8S_NAMESPACE=production

# ============================================================================
# Additional Integrations
# ============================================================================

# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Datadog (optional)
DD_API_KEY=your-datadog-api-key
DD_APP_KEY=your-datadog-app-key
DD_SITE=datadoghq.com

# New Relic (optional)
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=GeminiVideo
