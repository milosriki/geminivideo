name: Claude Code Agent

on:
  pull_request:
    types: [opened, synchronize, reopened]
  issue_comment:
    types: [created, edited]
  issues:
    types: [opened, labeled]
  workflow_dispatch:
    inputs:
      prompt:
        description: 'Task for Claude'
        required: false

permissions:
  contents: write
  pull-requests: write
  issues: write
  discussions: write

jobs:
  claude-code:
    runs-on: ubuntu-latest
    permissions:
      contents: write
      pull-requests: write
      issues: write
      discussions: write
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Install dependencies
        run: npm ci
        continue-on-error: true

      - name: Run Claude Code
        uses: anthropics/claude-code-action@v1
        with:
          anthropic_api_key: ${{ secrets.ANTHROPIC_API_KEY }}
          model: claude-opus-4-1
          allowed_tools: |
            Bash(npm run),
            Bash(npm test),
            Bash(npm run build),
            Bash(npm run lint),
            Bash(git log),
            Bash(git diff)
          max_turns: 10
          custom_instructions: |
            You are an expert developer working on the geminivideo project.
            Focus on code quality, testing, and documentation.
            Always run tests before finalizing changes.
            Commit changes with clear, descriptive messages.

      - name: Comment on PR if changes made
        if: github.event_name == 'pull_request'
        uses: actions/github-script@v7
        with:
          script: |
            github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: 'âœ… Claude Code analysis complete!'
            })
        continue-on-error: true
