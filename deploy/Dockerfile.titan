# =============================================================================
# Titan Core - Production-Grade Multi-Stage Dockerfile
# =============================================================================
# AI Council + Video Processing + Meta Integration
# Python 3.11 + FastAPI + PyTorch + FFmpeg
# =============================================================================

# -----------------------------------------------------------------------------
# Stage 1: Builder - Install dependencies
# -----------------------------------------------------------------------------
FROM python:3.11-slim AS builder

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    make \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /build

# Copy requirements and install dependencies
COPY services/titan-core/requirements.txt .
RUN pip install --user --no-cache-dir --default-timeout=1000 -r requirements.txt

# -----------------------------------------------------------------------------
# Stage 2: Production - Minimal runtime with optimizations
# -----------------------------------------------------------------------------
FROM python:3.11-slim AS production

# Set environment variables for production
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PYTHONPATH=/app \
    # Worker configuration
    WEB_CONCURRENCY=2 \
    MAX_WORKERS=4 \
    # Memory optimization
    MALLOC_ARENA_MAX=2

# Install runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    # FFmpeg for video processing
    ffmpeg \
    # OpenCV dependencies
    libsm6 \
    libxext6 \
    libxrender-dev \
    libglib2.0-0 \
    libgomp1 \
    # Audio processing
    libass-dev \
    libfontconfig1 \
    # Utilities
    curl \
    wget \
    ca-certificates \
    dumb-init \
    # Clean up
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create non-root user
RUN useradd -m -u 1000 -s /bin/bash titanuser

WORKDIR /app

# Copy Python packages from builder
COPY --from=builder /root/.local /home/titanuser/.local

# Copy application code
COPY services/titan-core/ .

# Create necessary directories with proper permissions
RUN mkdir -p \
    /tmp/titan-core/outputs \
    /tmp/titan-core/cache \
    /tmp/titan-core/uploads \
    /tmp/titan-core/models \
    /app/logs \
    && chmod -R 777 /tmp/titan-core \
    && chown -R titanuser:titanuser /app /tmp/titan-core

# Switch to non-root user
USER titanuser

# Add local packages to PATH
ENV PATH=/home/titanuser/.local/bin:$PATH

# Expose port
EXPOSE 8080

# Health check - longer start period for model loading
HEALTHCHECK --interval=20s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:${PORT:-8080}/health || exit 1

# Labels for metadata
LABEL maintainer="GeminiVideo DevOps" \
      version="1.0.0" \
      description="Titan Core AI Council Service" \
      service="titan-core"

# Use dumb-init to handle signals properly
ENTRYPOINT ["dumb-init", "--"]

# Graceful shutdown with signal handling
CMD ["sh", "-c", "trap 'echo Received SIGTERM, shutting down gracefully...; kill -TERM $PID; wait $PID' TERM; cd api && uvicorn main:app --host 0.0.0.0 --port ${PORT:-8080} --workers ${WEB_CONCURRENCY:-2} --log-level info & PID=$!; wait $PID"]
