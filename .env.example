# ============================================================================
# GEMINIVIDEO ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git (it's in .gitignore)

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your_local_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_local_service_role_key_here
SUPABASE_PROJECT_REF=your_project_ref_here
SUPABASE_ACCESS_TOKEN=your_access_token_here
SUPABASE_DB_URL=postgresql://postgres:postgres@localhost:54322/postgres

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_USER=geminivideo
POSTGRES_PASSWORD=changeme
POSTGRES_DB=geminivideo
DATABASE_URL=postgresql://geminivideo:changeme@postgres:5432/geminivideo

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://redis:6379

# ============================================================================
# AI API KEYS
# ============================================================================
GEMINI_API_KEY=your_gemini_api_key
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# ============================================================================
# META ADS API
# ============================================================================
META_APP_ID=your_meta_app_id
META_ACCESS_TOKEN=your_meta_access_token
META_AD_ACCOUNT_ID=your_meta_ad_account_id
META_CLIENT_TOKEN=your_meta_client_token
META_APP_SECRET=your_meta_app_secret
META_API_VERSION=v18.0

# ============================================================================
# GOOGLE ADS API
# ============================================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_DEVELOPER_TOKEN=your_google_developer_token
GOOGLE_REFRESH_TOKEN=your_google_refresh_token
GOOGLE_ADS_CUSTOMER_ID=your_google_ads_customer_id

# ============================================================================
# TIKTOK ADS API
# ============================================================================
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token
TIKTOK_ADVERTISER_ID=your_tiktok_advertiser_id

# ============================================================================
# GOOGLE CLOUD STORAGE
# ============================================================================
GCS_BUCKET_NAME=geminivideo-assets
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# ============================================================================
# SERVICE URLS (Local Docker)
# ============================================================================
ML_SERVICE_URL=http://ml-service:8003
VIDEO_AGENT_URL=http://video-agent:8082
DRIVE_INTEL_URL=http://drive-intel:8081
TITAN_CORE_URL=http://titan-core:8084
META_PUBLISHER_URL=http://meta-publisher:8083
TIKTOK_ADS_URL=http://tiktok-ads:8085
GOOGLE_ADS_URL=http://google-ads:8086
GATEWAY_URL=http://gateway-api:8080

# ============================================================================
# WORKER CONFIGURATION
# ============================================================================
SAFE_EXECUTOR_WORKER_ID=safe-executor-1
SAFE_EXECUTOR_POLL_INTERVAL_MS=5000
BATCH_MODE_ENABLED=true
BATCH_SIZE=10

# ============================================================================
# ENVIRONMENT
# ============================================================================
NODE_ENV=development
PORT=8080

# ============================================================================
# AI CREDITS CONFIGURATION
# ============================================================================
# Default credits assigned to new users
DEFAULT_AI_CREDITS=10000
